<div class="col-12 text text-end">
    <a href="/create-category" class="btn btn-primary">Add New Category</a>
</div>
<table class="table table-bordered">
    <tr>
        <th>S.NO</th>
        <th>Title</th>
        <th>Description</th>
        <th>Action</th>
    </tr>

    <% for(let i = 0; i < categories.length; i++){ %>
        <% let cat = categories[i]; %>
            <tr>
                <td>
                    <%= i + 1; %>
                </td>
                <td>
                    <%= cat.title; %>
                </td>
                <td>
                    <%= cat.description; %>
                </td>
                <td>
                    <a href="/edit-category?cat_id=<%= cat.id; %>" class="btn btn-primary">Edit</a>
                    <a href="/delete-category?cat_id=<%= cat.id; %>" class="btn btn-danger">Delete</a>
                </td>
            </tr>
            <% } %>

</table>
<% if(status && message){ %>
    <script>
        toastr.success('<%= message; %>', 'Success', {
            positionClass: 'toast-top-center',
            timeOut: 3000
        });
    </script>
    <% } %>