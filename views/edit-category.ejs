<div class="container mt-5">
    <div class="row">
        <div class="col-8 offset-2">
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">Edit Category : (
                        <%= category.title; %>)</h3>
                </div>
                <div class="card-body">
                    <form action="/create-category" method="post">
                        <div class="row">

                            <div class="col-12">
                                <label for="">Title</label>
                                <input type="text" name="title" id="" class="form-control" required="required" value="<%= category.title; %>" />
                            </div>

                            <div class="col-12">
                                <label for="">Description</label>
                                <textarea name="description" class="form-control" required="required"><%= category.description; %></textarea>
                            </div>

                            <div class="col-12 text text-center mt-4">
                                <input type="submit" class="btn btn-primary" value="Update Category" />
                                <a href="/categories" class="btn btn-info">Back</a>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>